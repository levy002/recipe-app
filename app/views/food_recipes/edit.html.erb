<section class="container">
  <h3 class='m-3'> Add food to Recipe</h3>
  <%= form_with url: recipe_food_recipe_path, method: :patch, scope: :edit_food_recipe do |form| %>
    <div class="" > -
      <div class="mb-3 col-sm-4">
        <%= form.label :food, class:"form-label" %><br>
        <%= form.select :food_id, current_user.foods.collect {|food| [food.name, food.id]},{ include_blank: true} , required: true, class:"form-select" %><br>
      </div>

      <div class="mb-3 col-sm-4">
        <%= form.label :quantity, class:"form-label" %><br>
        <%= form.number_field :quantity ,  class:"form-control" , required: true, placeholder: '1',  min: 1%><br>
      </div>

      <div class="mb-3 col-sm-2">
        <%= form.submit "Update", class:"btn btn-primary form-control" %>
      </div>
    </div>
  <%end%>
  <div class="mb-3 col-sm-2">
    <%=link_to 'Back', recipe_path(@recipe_id), class:"btn btn-primary form-control"%>
  </div>
</section>
