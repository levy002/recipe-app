<section class="container d-flex justify-content-center">
  <div class="">
  <h3 class='m-3 text-center'> Add Recipe</h3>
  <%= form_with url: recipes_path, scope: :recipe do |form| %>
    <%= form.text_field :name, placeholder: 'Please enter name', class: 'row m-3', require: true %>
    <%= form.text_field :preparation_time, placeholder: 'Please enter the preparation time', class: 'row m-3', require: true %>
    <%= form.text_field :cooking_time, placeholder: 'Please enter the cooking time', class: 'row m-3', require: true %>
    <%= form.text_area :description, placeholder: 'Please enter the description', class: 'row m-3', require: true %>
   <div class="d-flex justify-content-center"> <%= form.submit "Submit", class: 'btn btn-outline-info d-flex justify-content-center' %></div>
  <% end %>
  </div>
</section>