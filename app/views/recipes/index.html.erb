<section>
  <h1>All Recipes</h1>
  <div class="d-flex justify-content-end m-3">
    <button class="btn btn-outline-info">
      <%= link_to 'Add new recipe', new_recipe_path, class: 'nav-link' %>
    </button>
  </div>

  <div class="row m-3">
    <%= @recipes.each do |recipe| %>
      <div class="col-3 border p-3">
        <h3><%= recipe.name %></h3>
        
        <% if can? :destroy, recipe %>
          <%= button_to "Remove", recipe_path(recipe.id), method: :delete %>
        <% end %>

      </div>
      <div class="col-offset-1 col-8">
        <p><%= recipe.description %></p>
      </div>
    <% end %>
  </div>
</section>
